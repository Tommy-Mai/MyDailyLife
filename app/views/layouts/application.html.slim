doctype html
html
  head
    title
      | MyDailyLife
    = csrf_meta_tags
    = csp_meta_tag
    script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    meta[name="viewport" content="width=device-width, initial-scale=1.0"]
    link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" /
    link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" /

  body
    header
      .header-logo
        - if current_user
          #header_pop
            div
              p.arrow_box_buttom 月別カレンダーへ移動
          a#header_pop_trigger href="/calendar/index?start_date=#{Date.current.strftime('%Y-%m-%d')}" MyDailyLife
        - else
          a href="/" MyDailyLife

      ul.header-menus
        - if current_user
          li= link_to current_user.name, user_path(current_user)
          li= link_to '今日のタスク', "/calendar/show?start_date=#{Date.current.strftime('%Y-%m-%d')}"
          li= link_to "タグ一覧", "/meal_tags"
          - if current_user.admin == true
            li= link_to "ユーザー管理", admin_users_index_path
          li= link_to 'ログアウト', logout_path, method: :delete
        - else
          li= link_to 'MyDailyLifeとは', "/about"
          li= link_to '新規登録', new_user_path
          li= link_to 'ログイン', login_path

    - if flash[:notice]
      .flash.time-limit
        = flash[:notice]
    .tag_changed

    .main
      = yield
      = render partial: 'layouts/inquiry', locals: { inquiry: @inquiry}
      script src="https://unpkg.com/swiper/swiper-bundle.min.js"

      #page-top_btn.fas.fa-arrow-circle-up

      #footer
        .footer-container
          .footer-block
            h3 ご利用ガイド 
            a href="/faqs" よくある質問
          .footer-block
            h3 サイト情報
            a href="/policy" 利用規約
            a href="/privacy_policy" プライバシーポリシー
