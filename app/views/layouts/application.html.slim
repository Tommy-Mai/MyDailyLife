doctype html
html
  head
    title
      | MyDailyLife
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    meta[name="viewport" content="width=device-width, initial-scale=1.0"]
    link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" /
    script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"

  body
    header
      .header-logo
        - if current_user
          a href="/calendar/index?start_date=#{Date.current.strftime('%Y-%m-%d')}" MyDailyLife
        - else
          a href="/" MyDailyLife
        
      ul.header-menus
        - if current_user
          li= link_to current_user.name, user_path(current_user)
          li= link_to 'タスク検索',""
          - if current_user.admin == true
            li= link_to "ユーザー管理", admin_users_index_path
          li= link_to 'ログアウト', logout_path, method: :delete
        - else
          li= link_to 'MyDailyLifeとは', "/about"
          li= link_to '新規登録', new_user_path
          li= link_to 'ログイン', login_path


    - if flash[:notice]
      .flash
        = flash[:notice]

    = yield
